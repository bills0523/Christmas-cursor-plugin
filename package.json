{
  "name": "santas-metrics-sleigh",
  "displayName": "Santa's Metrics Sleigh",
  "description": "A festive sidebar that tracks keystrokes and coding time while Santa tosses gifts.",
  "version": "0.0.1",
  "publisher": "workshop",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:santaMetricsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "santaMetricsContainer",
          "title": "Santa's Metrics",
          "icon": "media/santa-icon.svg"
        }
      ]
    },
    "views": {
      "santaMetricsContainer": [
        {
          "id": "santaMetricsView",
          "name": "Santa's Metrics Sleigh"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.107.0",
    "typescript": "^5.3.0"
  }
}
